<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lecongan.bt11_toanlopla.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giup be lam toan cong"
        />
    <TextView
        android:layout_below="@+id/btn_new"
        android:id="@+id/tv1"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So thu nhat"
        />
    <TextView
        android:layout_below="@+id/edt_sothu1"
        android:id="@+id/tv2"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So thu hai"
        />
    <TextView
        android:layout_below="@id/edt_sothu2"
        android:id="@+id/tv_ds"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dap so cua be"
        />
    <Button
        android:layout_below="@id/tv"
        android:id="@+id/btn_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bai Moi"/>
    <Button
        android:layout_below="@+id/edt_ds"
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiem Tra"/>
    <EditText
        android:layout_below="@id/tv1"
        android:id="@+id/edt_sothu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_below="@id/tv_ds"
        android:id="@+id/edt_ds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:layout_below="@id/tv2"
        android:id="@+id/edt_sothu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_below="@id/btn_test"
        android:id="@+id/tv_kq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
